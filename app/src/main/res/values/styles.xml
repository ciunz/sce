<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text" parent="Widget.AppCompat.TextView">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="text.secondary" parent="text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.light" parent="text">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="text.medium" parent="text">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="text.medium.large" parent="text.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.medium.light" parent="text.medium">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="text.bold" parent="text">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="text.bold.light" parent="text">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="text.bold.large" parent="text.bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.bold.large.secondary" parent="text.bold.large">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.small" parent="text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.small.secondary" parent="text.small">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.small.light" parent="text.small">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="text.toolbar" parent="text">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAppearance">@style/text</item>
        <item name="cornerRadius">26dp</item>
        <item name="android:height">52dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="edt">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>